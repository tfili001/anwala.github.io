<script>
  $(document).ready(function() {
    if(!Cookies.get('ncrm')) {
      Cookies.set('ncrm', true);
      $('#disruption').addClass('active');
      $('#close-disruption').on('click', function(e) {
        e.preventDefault();
        $('#disruption').remove();
      })
    }
  });
</script>



