        <script type="application/javascript">
            $(function () {
                $('body').on('tblzSettingsUpdated', checkForPremiumNoPass);
                
                // Initial call to function
                checkForPremiumNoPass();

                function checkForPremiumNoPass() {
                    var send = {'action' : 'tblz_premium_no_pass_user'};

                    $.ajax({
                        url     : tblz.ajaxUrl,
                        data    : send,
                        type    : 'POST',
                        success : function (data) {
                            var d = JSON.parse(data);

                            if(d === true) {
                                displayResetPassAlert();
                            } 
                        },
                        error   : function (xhr, status, error) {
                            if(window.console) {
                                console.log('Error in checkForPremiumNoPass', xhr, status, error);
                            }
                        }
                    });
                }

                function displayResetPassAlert() {
                    tblz.Alert.add('alert-info', tblz.Common.getLang('auth.pleaseResetPass', {email: ""}), 30000, false);
                }
            });
        </script>
    </body>
</html>
