<script type="text/javascript">
    (function() {
        function loadHorizon() {
            var s = document.createElement('script');
            s.type = 'text/javascript';
            s.async = true;
            s.src = 'https://www.theblaze.com/wp-content/plugins/tblz_sailthru/js/2d981fd23cc1463801b421dd790dd80f.js';
            var x = document.getElementsByTagName('script')[0];
            x.parentNode.insertBefore(s, x);
        }
        loadHorizon();
        var oldOnLoad = window.onload;
        window.onload = function() {
            if (typeof oldOnLoad === 'function') {
                oldOnLoad();
            }
            try {
		if (window.outerWidth < 800) {
                	Sailthru.setup({"domain":"horizon.theblaze.com"});
		}
		else {
			Sailthru.setup({ domain: 'horizon.theblaze.com', concierge:{from:"top",threshold:250,filter:{tags:"site-theblaze"}} });
		}
            }
            catch(err) {
            }
        };
    })
    ();
</script>
