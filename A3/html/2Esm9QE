                    <source srcset="https://static.politico.com/dims4/default/1bb2eaf/2147483647/resize/646x/quality/90/?url=https%3A%2F%2Fstatic.politico.com%2F93%2Fa4%2F00ed33c949ceb328f421412d1696%2F180215-marjory-stoneman-douglass-school-ap-1160.jpg" media="(min-width: 485px)">
                    <source srcset="https://static.politico.com/dims4/default/26cee0b/2147483647/resize/463x/quality/90/?url=https%3A%2F%2Fstatic.politico.com%2F93%2Fa4%2F00ed33c949ceb328f421412d1696%2F180215-marjory-stoneman-douglass-school-ap-1160.jpg" media="(max-width: 484px)">
                    <img src="https://static.politico.com/dims4/default/aa99473/2147483647/resize/1160x%3E/quality/90/?url=https%3A%2F%2Fstatic.politico.com%2F93%2Fa4%2F00ed33c949ceb328f421412d1696%2F180215-marjory-stoneman-douglass-school-ap-1160.jpg" alt="Stoneman Douglas High School in Parkland, Fla. is pictured. | AP Photo" title="Stoneman Douglas High School in Parkland, Fla. is pictured. | AP Photo"></picture>
